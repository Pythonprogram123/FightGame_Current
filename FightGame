while(1):
    Choice = input(">> ")
    if Choice == "?help":
        Help()
    elif Choice == "?player":
        Playerinfo()
    elif Choice == "?battle":
        OpponentHealth = random.randrange(999,1200)
        if Kit_Select == 1:
            Kit_Battle()
        else:
            print("First Select Unlocked Character")
    elif Choice == "?shop":
        Shop()
    elif Choice == "?trophies":
        Trophies()
    elif Choice == "?match":
        Match()
    elif Choice == "?rules":
        Rules()
    elif Choice == "?profile":
        Profile()
    else:
        print("Please enter code that is available")
