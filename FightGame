                print("Upgraded ChocoRobo")
                Coins -= 100
            elif Coins <= 100:
                print("You doesn't have money")
            elif ChocoRobo == 0:
                print("YOu doesn't buy ChocoRobo")

        elif Shop_Choice == "3":
            print("Do you want to buy ChocoRobo")
            YorN = input("Yes or no : ")
            if YorN == "yes" or "Yes" and Coins >= 250 or Coins == 250:
                print("You purchased ChocoRobo")
                ChocoRobo = ChocoRobo + 1
                Coins -= 250
        else:
            print("Use Correct options")
    elif Choice == "?trophies":
        print("Total trophies : ",TrophyCount)
    elif Choice == "?news":
        print("1.Patch Notes")
        print("2.Balance Changes")
        News_Choice = input("Choose any of these on above : ")
        if News_Choice == "Patch Notes" or "Patchnotes" or "patchnotes" or "PatchNotes":
            print("1. Lines Decreased 1500 to 230")
            print("2. Fixed No word in code")
            print("3. New Characters in Fight.io")
            print("   Kit is Beginner")
        elif News_Choice == "BalanceChanges" or "balancechanges" or "Balancechanges":
            print("1. Opponent Damage increased 100 to 200")
    elif Choice == "?coins":
        print("Total coins : ", Coins)
    elif Choice == "?matches":
        print("Total Matches you played : ", MatchCount)
    elif Choice == "?wins":
        Wins()
    elif Choice == "?rules":
        Rules()
    elif Choice == "?profile":
        Profile()
    else:
        print("Please enter code that is available")
