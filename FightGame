                    else:
                        ScrewBot_BaseHealth = ScrewBot_BaseHealth - OpponentDam
                        print("Opponent health = ", OpponentHealth)
                        print('Your Health = ', ScrewBot_BaseHealth, '-', OpponentDam)
                else:
                    if ScrewBot_DefensiveShield == 1:
                        print("He Used Oppo_Special")
                        ScrewBot_BaseHealth = ScrewBot_BaseHealth - (OpponentSpecial - Damage_Reduction)
                        print("Opponent health = ", OpponentHealth)
                        print('Your Health = ', ScrewBot_BaseHealth, '-', OpponentSpecial - Damage_Reduction)
                    else:
                        print("He Used Oppo_Special")
                        ScrewBot_BaseHealth = ScrewBot_BaseHealth - OpponentSpecial
                        print("Opponent health = ", OpponentHealth)
                        print('Your Health = ', ScrewBot_BaseHealth, '-', OpponentSpecial)
        else:
            print("First Select Unlocked Character")
    elif Choice == "?shop":
        print("          Today,s Shop")
        print("1 = Drone : 150")
        print("2 = Upgrade : 100")
        print("3 = ChocoRobo : 250")
        Shop_Choice = input("Enter your Choice : ")
        if Shop_Choice == "1":
            print("Drone,it cost 150 coins Do you want to buy")
            Choice_Drone_Buy = input("Yes or no : ")
            if Choice_Drone_Buy == "Yes" or "yes":
                if Coins >= 150:
                    print("Successfully bought and you need to remember this code CrshtyAD or Copy it to verify and paste in the battle ")
                else:
                    print("you does't have money to buy drone")
            elif Choice_Drone_Buy == "no" or "No":
                print("Buy whenever you want")
            else:
                print("Use correct options")
        elif Shop_Choice == "2":
            Charater_Upgrade = input("Which Player you need to upgrade : ")
            if Charater_Upgrade == "ChocoRobo" and Coins >= 100 and ChocoRobo == 1:
                print("Upgrading....")
                ChocoRobo_Upgrade = True
                print("Upgraded ChocoRobo")
                Coins -= 100
            elif Coins <= 100:
                print("You doesn't have money")
            elif ChocoRobo == 0:
                print("YOu doesn't buy ChocoRobo")
        elif Shop_Choice == "3":
            print("Do you want to buy ChocoRobo")
            YorN = input("Yes or no : ")
            if YorN == "yes" or "Yes" and Coins >= 250 or Coins == 250:
                print("You purchased ChocoRobo")
                ChocoRobo = ChocoRobo + 1
                Coins -= 250
        else:
            print("Use Correct options")
    elif Choice == "?trophies":
        Trophies()
    elif Choice == "?match":
        Match()
    elif Choice == "?rules":
        Rules()
    elif Choice == "?profile":
        Profile()
    else:
        print("Please enter code that is available")
