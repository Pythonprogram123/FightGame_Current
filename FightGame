        print("2 = Heal")
        print("3 = Kick")
        print("4 = Gun")
        while(1):
            ChoiceFight = int(input())
            if ChoiceFight == 1:
                    AttackHealth = random.randint(40,120)
                    OpponentHealth = OpponentHealth - AttackHealth
                    print("Opponent health = ", OpponentHealth, "-", AttackHealth)
                    print("Your Health = ", BaseHealth)
