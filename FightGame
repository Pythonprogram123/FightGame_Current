def Help():
        print("?battle , For battling your opponent and gain money")
        print("?trophies , For Checking your trophies")
        print("?shop , For buying items i.e :- Upgrade and Drone")
        print("?rules , To know about this game and more")
        print("?player , To unlock player")
        print("?profile, To see your profile such as Battles played, battles won etc")
def Playerinfo():
    print("-select <playername>")
    if Kit_Unlock == 1:
        print("Kit Trophies :- ", Kit_Trophies)
    Choice_Select_Player = input("Enter your Choice : ")
    if Choice_Select_Player == "-select ChocoRobo":
        if ChocoRobo_Unlock == 0:
            print("You doesnt bought ChocoRobo")
        elif ChocoRobo == 1:
            Select_ChocoRobo += 1
            Kit_Select -= 1
            Marg_Select -= 1
            ScrewBot_Select -= 1
            print("ChocoRobo Selected")
    elif Choice_Select_Player == "-select Kit":
        Kit_Select += 1
        Select_ChocoRobo -= 1
        Marg_Select -= 1
        ScrewBot_Select -= 1
        print("Kit Selected")
    elif Choice_Select_Player == "-select Marg" and TrophyCount > 50:
        Marg_Select += 1
        Kit_Select -= 1
        Select_ChocoRobo -= 1
        print('Marg Selected')
        if TrophyCount < 50:
            print("Your Trophy Must greater than 50 to unlock Marg")
        elif Choice_Select_Player == "-select Screwbot" and ScrewBot == 1:
            ScrewBot_Select += 1
            Kit_Select -= 1
            Select_ChocoRobo -= 1
            Marg_Select -= 1
            print("Screw Bot Selected")
        else:
            print("Enter correct Choice")
def Shop():
    print("          Today,s Shop")
    print("1 = Drone : 150")
    print("2 = Upgrade : 100")
    print("3 = ChocoRobo : 250")
    Shop_Choice = input("Enter your Choice : ")
    if Shop_Choice == "1":
        print("Drone,it cost 150 coins Do you want to buy")
        Choice_Drone_Buy = input("Yes or no : ")
        if Choice_Drone_Buy == "Yes" or "yes":
            if Coins >= 150:
                print("Successfully bought and you need to remember this code CrshtyAD or Copy it to verify and paste in the battle ")
            else:
                print("you does't have money to buy drone")
        elif Choice_Drone_Buy == "no" or "No":
            print("Buy whenever you want")
        else:
            print("Use correct options")
    elif Shop_Choice == "2":
        Charater_Upgrade = input("Which Player you need to upgrade : ")
        if Charater_Upgrade == "ChocoRobo" and Coins >= 100 and ChocoRobo == 1:
            print("Upgrading....")
            ChocoRobo_Upgrade = True
            print("Upgraded ChocoRobo")
            Coins -= 100
        elif Coins <= 100:
            print("You doesn't have money")
        elif ChocoRobo == 0:
            print("YOu doesn't buy ChocoRobo")
    elif Shop_Choice == "3":
        print("Do you want to buy ChocoRobo")
        YorN = input("Yes or no : ")
        if YorN == "yes" or "Yes" and Coins >= 250 or Coins == 250:
            print("You purchased ChocoRobo")
            ChocoRobo = ChocoRobo + 1
            Coins -= 250
    else:
        print("Use Correct options")
def Trophies():
    print("Total trophies : ",TrophyCount)

