# Battle Command with other players, declared function for different players
def ChocoRobo_Battle():
    OpponentHealth = 1200
    ChocoRobo_BaseHealth = 1654
    print("Opponent Health : ", OpponentHealth)
    print("BaseHealth : ", ChocoRobo_Fixed_Health)
    print("Commands to Fight with ChocoRobo")
    print("1. Attack")
    print("2. Heal")
    print("3. Spin ( Special Attack ) ")
    k = 0
    while k < 6:
        ChoiceFight = int(input())
        if ChoiceFight == 1:
            OpponentHealth = OpponentHealth - ChocoRobo_Attack
            print("Opponent health = ", OpponentHealth, "-", ChocoRobo_Attack)
            print("Your Health = ", ChocoRobo_BaseHealth)
            if OpponentHealth < 0:
                ChocoRobo_BaseHealth = ChocoRobo_Fixed_Health
                OpponentHealth = 1200
                print("You wins")
                CRobo_Trophies += 8
                WinMatch = int(WinMatch + 1)
                TrophyCount = int(TrophyCount + 8)
                Tokens = int(Tokens + 50)
                Coins = int(Coins + 100)
                break
            elif ChocoRobo_BaseHealth < 0:
                ChocoRobo_BaseHealth = ChocoRobo_Fixed_Health
                print("Opponent wins")
                print("Better luck next time")
                CRobo_Trophies += 3
                Tokens = int(Tokens + 20)
                break
        elif ChoiceFight == 2:
                print("Healing.........")
                ChocoRobo_BaseHealth = ChocoRobo_BaseHealth + HealHealth
                print("Opponent health = ", OpponentHealth)
                print("Your health = ", ChocoRobo_BaseHealth, "+", ChocoRobo_Heal)
                if OpponentHealth < 0:
                    ChocoRobo_BaseHealth = ChocoRobo_Fixed_Health
                    OpponentHealth = 1200
                    print("You wins")
                    CRobo_Trophies += 8
                    WinMatch = int(WinMatch + 1)
                    TrophyCount = int(TrophyCount + 8)
                    Tokens = int(Tokens + 50)
                    Coins = int(Coins + 100)
                    break
                elif ChocoRobo_BaseHealth < 0:
                    ChocoRobo_BaseHealth = ChocoRobo_Fixed_Health
                    print("Opponent wins")
                    print("Better luck next time")
                    CRobo_Trophies += 3
                    Tokens = int(Tokens + 20)
                    break
        elif ChoiceFight == 3:
            if ChocoRobo_Heal_Times == 1:
                ChocoRobo_Heal_Times -= 1
            else:
                ChocoRobo_Spin_Times += 1
                OpponentHealth = OpponentHealth - ChocoRobo_Spin
                print("Opponent health = ", OpponentHealth, "-", ChocoRobo_Spin)
                print("Your Health = ", ChocoRobo_BaseHealth)
                if OpponentHealth < 0:
                    ChocoRobo_BaseHealth = ChocoRobo_Fixed_Health
                    OpponentHealth = 1200
                    print("You wins")
                    CRobo_Trophies += 8
                    WinMatch = int(WinMatch + 1)
                    TrophyCount = int(TrophyCount + 8)
                    Tokens = int(Tokens + 50)
                    Coins = int(Coins + 100)
                    break
                elif ChocoRobo_BaseHealth < 0:
                    ChocoRobo_BaseHealth = ChocoRobo_Fixed_Health
                    print("Opponent wins")
                    print("Better luck next time")
                    CRobo_Trophies += 3
                    Tokens = int(Tokens + 20)
                    break
        print("***************************************************************")
        print("***************************************************************")
        print("Opponents Turn")
        Opponent_Turn = random.randrange(2, 4)
        if Opponent_Turn == 2:
            print("He attacks")
            ChocoRobo_BaseHealth = ChocoRobo_BaseHealth - OpponentDam
            print("Opponent health = ", OpponentHealth)
            print('Your Health = ', ChocoRobo_BaseHealth, '-', OpponentDam)
        else:
            print("He Used Oppo_Special")
            ChocoRobo_BaseHealth = ChocoRobo_BaseHealth - OpponentSpecial
            print("Opponent health = ", OpponentHealth)
            print('Your Health = ', ChocoRobo_BaseHealth, '-', OpponentSpecial)    
